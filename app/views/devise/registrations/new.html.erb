<div class="col-md-4 col-md-offset-4">
<h2 style="text-align:center">Sign up</h2>
<div style="margin-left:50px">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email, autofocus: true %>
  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :blood_group, collection: ['A+','A-','B+','B-','AB+','AB-','O+','O-'] %>
  <%= f.input :address, as: :text %>
  <%= f.input :password, input_html: { minlength: 6 } %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>

<%= render "devise/shared/links" %>
<%= render "layouts/social_logins"%>
</div>
</div>